module Examples.Server {
    import Std.Net.HTTP;
    import Std.IO.*;

    function help() {
        println("Usage: strela Server.strela <port>");
    }

    function main(args: String[]): int {
        if (args.length < 1) {
            help();
            return 1;
        }

        var port = args[0].toInt();        
        var server = new HTTP.Server(0, port);

        var i: u8 = 64;
        while (true) {
            var request = server.accept();

            if (request.headers.has("Host")) {
                println(request.method + " request for http://" + request.headers["Host"] + request.path);
            }
            else {
                println(request.method + " request for http://<default-server>" + request.headers["Host"] + request.path);
            }

            var response = new HTTP.Response;
            response.statusCode = 200;
            response.statusMessage = "OK";
            
            response.headers.set("Content-type", "text/html");
            
            response.body = "<!doctype html><html><head><style>body {font-family: Sans-serif; background: url(data:image/png;base64,); background-size: cover}</style></head><body><h1>Hello, world!";
            response.body = response.body + new String([i]);
            response.body = response.body + "</h1></body></html>";
            request.respond(response);
            
            i++;
        }
        server.close();

        return 0;
    }
}